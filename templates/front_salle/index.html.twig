{% extends 'base1.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block body %}
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="{{ asset('img/breadcrumb-bg.jpg')}}">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Salles</h2>
                        <div class="bt-option">
                            <a href="./index.html">Home</a>
                            <span>Salles</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <section class="testimonial-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Nos salles</h2>
                    </div>
                </div>
            </div>

            <div class="ts_slider owl-carousel">
                {% for salle in salles %}
                    <div class="ts_item">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <div class="ti_pic">
                                    <a href="{{ path('app_front_salle_show', {'id': salle.id}) }}">
                                        <img src="{{ asset('uploads/' ~ salle.logoSalle) }}" alt="">
                                    </a>
                                </div>
                                <div class="ti_text">
                                    <div style=" word-wrap: break-word; color:snow"> {{ salle.description}}</div>
                                    <h5>{{ salle.addresse }}</h5>
                                    <div class="tt-rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <style>
                .less-than-full-width-textarea {
                    width: 90%; /* ajustez selon vos besoins */
                    max-width: 800px; /* largeur maximale */
                }

                .no-background {
                    background-color: transparent;
                    border: none;
                }

                .center-text {
                    text-align: center;
                }

                .white-text {
                    color: white;
                }
            </style>



        </div>
    </section>
{% endblock %}
