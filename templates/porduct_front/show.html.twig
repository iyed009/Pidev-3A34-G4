{% extends 'base1.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="{{ asset('img/breadcrumb-bg.jpg')}}">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Produit</h2>
                        <div class="bt-option">
                            <a href="#">Home</a>
                            <span>Produit</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- About US Section Begin -->
    <section class="pricing-section service-pricing spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Our Plan</span>
                        <h2>Choose your pricing plan</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-8">
                    <!-- Ici, vous pouvez boucler à travers les produits et afficher leurs détails -->
                        <div class="ps-item">
                            <h3>{{ product.name }}</h3>
                            <div class="pi-price">
                                <h2>{{ product.price }}</h2>
                                <span style="font-size: 20px">#{{ product.categorieP }}</span>

                            </div>
                            <!-- Autres détails du produit -->
                            <ul>
                                <li >{{ product.description }}</li>

                            </ul>
                            <!-- Bouton pour ajouter au panier -->
                            <a href="{{ path('cart_add', {'id': product.id}) }}" class="primary-btn pricing-btn">Ajouter dans Panier</a>
                            <!-- Icône de vue détaillée -->
                        </div>
                </div>
            </div>
        </div>
    </section>
    <!-- About US Section End -->
{% endblock %}
