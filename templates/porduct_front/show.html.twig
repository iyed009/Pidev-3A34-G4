{% extends 'base1.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="{{ asset('img/breadcrumb-bg.jpg')}}">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Produit</h2>
                        <div class="bt-option">
                            <a href="#">Home</a>
                            <span>Produit</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- About US Section Begin -->
    <section class="aboutus-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col p-0">
                    <!-- Image Section -->
                    <div class="image-container" style="height: 400px; overflow: hidden;">
                        <a href="{{ path('app_porduct_front_show', {'id': product.id}) }}">
                            <img src="{{ asset('uploads/' ~ product.image) }}" style="height: 100%; width: auto;" alt="Product Image">
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 p-0">
                    <!-- Description Section -->
                    <div class="about-text">
                        <div class="section-title">
                            <h2 style="color: #f36100; font-size: 24px; margin-bottom: 10px;">{{ product.name }}</h2>
                            <div style="font-size: 18px; color: #555;">
                                <h4 style="margin-bottom: 5px;"><span style="color:  #777;">Prix:</span> <span style="color:  #ccc;">{{ product.price }}</span></h4>
                            </div>
                        </div>
                        <div class="at-desc" style="font-size: 16px; color: #333;">
                            <p>{{ product.description }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- About US Section End -->
{% endblock %}
