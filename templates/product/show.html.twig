{% extends 'base2.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}





    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
        <!--begin::Post-->
        <div class="post d-flex flex-column-fluid" id="kt_post">
            <!--begin::Container-->
            <div id="kt_content_container" class="container-xxl">
                <!--begin::Contact-->
                <div class="card">
                    <!--begin::Card header-->
                    <div class="card-header ">
                        <!--begin::Card title-->
                        <div class="card-title m-0">
                            <h3 class="fw-bolder m-0">Product Details</h3>
                        </div>
                        <!--end::Card title-->
                        <!--begin::Action-->












                        <div class="card-header border-0 pt-5">
                            <div class="card-header border-left-2 pt-4"> {{ include('product/_delete_form.html.twig') }}</div>






                            <div class="card-toolbar">
                                <a href="#" class="btn btn-light-success" data-bs-toggle="modal"
                                   data-bs-target="#kt_modal_new_target">

                                    Modifier
                                    Porduit</a>
                                <div class="modal fade" id="kt_modal_new_target" tabindex="-1"
                                     aria-hidden="true">
                                    <!--begin::Modal dialog-->
                                    <div class="modal-dialog modal-dialog-centered mw-650px" id="mainModal">
                                        <!--begin::Modal content-->
                                        <div class="modal-content rounded" id="mainModal">
                                            <!--begin::Modal header-->
                                            <div class="modal-header pb-0 border-0 justify-content-end">
                                                <!--begin::Close-->
                                                <div class="btn btn-sm btn-icon btn-active-color-primary"
                                                     data-bs-dismiss="modal">
                                                    <!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
                                                    <span class="svg-icon svg-icon-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                             viewBox="0 0 24 24" fill="none">
                                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1"
                                                  transform="rotate(-45 6 17.3137)" fill="black"/>
                                            <rect x="7.41422" y="6" width="16" height="2" rx="1"
                                                  transform="rotate(45 7.41422 6)" fill="black"/>
                                        </svg>
                                    </span>
                                                    <!--end::Svg Icon-->
                                                </div>
                                                <!--end::Close-->
                                            </div>
                                            <!--begin::Modal header-->
                                            <!--begin::Modal body-->
                                            <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">

                                                {{ form_start(form, {'attr': {'id': 'kt_modal_new_target_form', 'class': 'form', 'action': path('app_product_show', {'id': product.id}) }}) }}
                                                <div class="mb-13 text-center">

                                                    <h1 class="mb-3">Modifier Porduit</h1>
                                                    <!--end::Title-->
                                                    <!--begin::Description-->

                                                    <!--end::Description-->
                                                </div>
                                                <!--end::Heading-->
                                                {{ form_row(form.name, {'label': 'Nom', 'label_attr': {'class': 'fw-bolder fs-6 text-gray-800'}, 'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrez le nom du produit'}}) }}
                                                {{ form_row(form.quantite, {'label': 'Quantité', 'label_attr': {'class': 'fw-bolder fs-6 text-gray-800'}, 'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrez la quantité du produit'}}) }}
                                                {{ form_row(form.description, {'label': 'Description', 'label_attr': {'class': 'fw-bolder fs-6 text-gray-800'}, 'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrez la description du produit'}}) }}
                                                {{ form_row(form.price, {'label': 'Prix', 'label_attr': {'class': 'fw-bolder fs-6 text-gray-800'}, 'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrez le prix du produit'}}) }}
                                                {{ form_row(form.categorieP, {'label': 'Catégorie', 'label_attr': {'class': 'fw-bolder fs-6 text-gray-800'}, 'attr': {'class': 'form-select form-select-solid'}}) }}
                                                {{ form_row(form.image, {
                                                    'label': 'Image de produit',
                                                    'label_attr': {'class': 'fw-bolder fs-6 text-gray-800'},
                                                    'attr': {'class': 'form-control form-control-solid', 'accept': 'image/*'}
                                                }) }}
                                                <!--begin::Actions-->
                                                <div class="text-center mt-5 mb-3">

                                                    <button type="submit" id="kt_modal_new_target_submit"
                                                            class="btn btn-primary">
                                                        <span class="indicator-label">Soumettre</span>
                                                        <span class="indicator-progress">Veuillez patienter...
                                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                        </span>
                                                    </button>

                                                </div>


                                                <!--end::Actions-->
                                                {{ form_end(form) }}
                                                <!--end:Form-->
                                            </div>
                                            <!--end::Modal body-->
                                        </div>
                                        <!--end::Modal content-->
                                    </div>
                                    <!--end::Modal dialog-->
                                </div>
                            </div>
                        </div>



                    </div>
                    <!--begin::Body-->
                    <div class="card-body p-lg-17">
                        <!--begin::Row-->
                        <div class="row mb-3">
                            <!--begin::Col-->
                            <div class="col-md-6 pe-lg-10">
                                <!--begin::Form-->
                                <div class="card-body p-9">
                                    <!--begin::Card body-->

                                    <div class="row mb-7">
                                        <!--begin::Label-->
                                        <label class="col-lg-4 fw-bold text-muted">Nom</label>
                                        <!--end::Label-->
                                        <!--begin::Col-->
                                        <div class="col-lg-8">
                                            <span class="fw-bolder fs-6 text-gray-800 col-lg-8 d-flex justify-content-center align-items-center">{{ product.name }}</span>
                                        </div>
                                        <!--end::Col-->
                                    </div>
                                    <!--begin::Input group-->
                                    <div class="row mb-7">
                                        <!--begin::Label-->
                                        <label class="col-lg-4 fw-bold text-muted">Description</label>
                                        <!--end::Label-->
                                        <!--begin::Col-->
                                        <div class="col-lg-8 fv-row">
                                            <span class="fw-bolder fs-6 text-gray-800 me-2 col-lg-8 d-flex justify-content-center align-items-center">{{ product.description }}</span>
                                        </div>
                                        <!--end::Col-->
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Input group-->
                                    <div class="row mb-7">
                                        <!--begin::Label-->
                                        <label class="col-lg-4 fw-bold text-muted">Prix
                                        </label>
                                        <!--end::Label-->
                                        <!--begin::Col-->
                                        <div class="col-lg-8 d-flex align-items-center">
                                            <span class="fw-bolder fs-6 text-gray-800 me-2 col-lg-8 d-flex justify-content-center align-items-center">{{ product.price }}</span>
                                        </div>
                                        <!--end::Col-->
                                    </div>
                                    <div class="row mb-7">
                                        <!--begin::Label-->
                                        <label class="col-lg-4 fw-bold text-muted">Quantite</label>
                                        <!--end::Label-->
                                        <!--begin::Col-->
                                        <div class="col-lg-8 fv-row">
                                            <span class="fw-bolder fs-6 text-gray-800 me-2 col-lg-8 d-flex justify-content-center align-items-center">{{ product.quantite }}</span>
                                        </div>
                                        <!--end::Col-->
                                    </div>
                                    <div class="row mb-7">
                                        <!--begin::Label-->
                                        <label class="col-lg-4 fw-bold text-muted">Categorie
                                        </label>
                                        <!--end::Label-->
                                        <!--begin::Col-->
                                        <div class="col-lg-8 d-flex align-items-center">
                                            <span class="fw-bolder fs-6 text-gray-800 me-2 col-lg-8 d-flex justify-content-center align-items-center">{{ product.categoriep.name }}</span>
                                        </div>
                                        <!--end::Col-->
                                    </div>
                                    <!--end::Input group-->
                                </div>
                                <!--end::Form-->
                            </div>
                            <!--end::Col-->
                            <!--begin::Col-->
                            <div class="col-md-6 ps-lg-10">
                                <!--begin::Map-->
                                <div class="w-100 rounded mb-2 mb-lg-0 mt-2" >
                                    {% if product.image|length > 0 %}
                                        <img src="{{ asset('uploads/product/' ~ product.image) }}" class="img-fluid" alt="Product Image" width="320" height="200">
                                    {% else %}
                                        <img src="{{ asset('uploads/product/Not found.jpg') }}" class="img-fluid" alt="Image Not Found">
                                    {% endif %}
                                </div>
                                <!--end::Map-->
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Row-->

                        <a href="{{ path('app_product_index') }}" class="btn btn-light">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>

                    </div>
                    <!--end::Card-->
                </div>
                <!--end::Body-->
            </div>
            <!--end::Contact-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->



{% endblock %}
