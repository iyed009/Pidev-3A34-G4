{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container-fluid" style="height: 100vh; background-color: #120907;">
		<div class="row h-100 justify-content-center align-items-center">
			<div class="card shadow-lg" style="width: 70%; height: 80vh; max-width: none; border: none;">
				<div
					class="row g-0 h-100">
					<!-- Background Image Section -->
					<div class="col-md-6 d-none d-md-block" style="background-image: url('{{ asset('img/gym.jpg') }}'); background-size: cover; background-position: center center;"></div>
					<!-- Form Section -->
					<div class="col-md-6">
						<div class="card-body">
							<h5 class="card-title text-center">Register</h5>
							{% for flash_error in app.flashes('verify_email_error') %}
								<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
							{% endfor %}
							{{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
							<div
								class="row">
								<!-- Email and Password in one line -->
								<div class="col-md-6 mb-3">
									{{ form_label(registrationForm.email) }}
									{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
									<div class="text-danger">{{ form_errors(registrationForm.email) }}</div>
								</div>
							</div>
							<div
								class="row">
								<!-- Password and Confirm Password on the same line -->
								<div class="col-md-6 mb-3">
									{{ form_label(registrationForm.password.first, 'Password') }}
									{{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
									<div class="text-danger">{{ form_errors(registrationForm.password.first) }}</div>
								</div>
								<div class="col-md-6 mb-3">
									{{ form_label(registrationForm.password.second, 'Confirm Password') }}
									{{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
									<div class="text-danger">{{ form_errors(registrationForm.password.second) }}</div>
								</div>
							</div>
							<div
								class="row">
								<!-- Nom and Prenom in one line -->
								<div class="col-md-6 mb-3">
									{{ form_label(registrationForm.nom) }}
									{{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
									<div class="text-danger">{{ form_errors(registrationForm.nom) }}</div>
								</div>
								<div class="col-md-6 mb-3">
									{{ form_label(registrationForm.prenom) }}
									{{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
									<div class="text-danger">{{ form_errors(registrationForm.prenom) }}</div>
								</div>
							</div>
							<div
								class="row">
								<!-- Adresse and NumTele in one line -->
								<div class="col-md-6 mb-3">
									{{ form_label(registrationForm.adresse) }}
									{{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control'}}) }}
									<div class="text-danger">{{ form_errors(registrationForm.adresse) }}</div>
								</div>
								<div class="col-md-6 mb-3">
									{{ form_label(registrationForm.numTele) }}
									{{ form_widget(registrationForm.numTele, {'attr': {'class': 'form-control'}}) }}
									<div class="text-danger">{{ form_errors(registrationForm.numTele) }}</div>
								</div>
							</div>
							<!-- Roles and AgreeTerms -->
							<div class="row">
								<div class="col-md-6 mb-3">
									{{ form_label(registrationForm.roles) }}
									{{ form_widget(registrationForm.roles, {'attr': {'class': 'form-control'}}) }}
									<div class="text-danger">{{ form_errors(registrationForm.roles) }}</div>
								</div>
								<div class="col-md-6 mb-3">
									{{ form_label(registrationForm.avatar) }}
									{{ form_widget(registrationForm.avatar, {'attr': {'class': 'form-control'}}) }}
									<div class="text-danger">{{ form_errors(registrationForm.avatar) }}</div>
								</div>


							</div>
							<div class="row">
								<div class="mb-3">
									{{ form_row(registrationForm.recaptcha) }}
									{{ form_errors(registrationForm.recaptcha) }}
								</div>
								<div class="col-md-6 mb-3"></br>
								{{ form_row(registrationForm.agreeTerms) }}

							</div>
						</div>
					</div>
					{% if app.flashes('registration_error') %}
						<div class="alert alert-danger">
							{% for flash_error in app.flashes('registration_error') %}
								{{ flash_error }}
							{% endfor %}
						</div>
					{% endif %}
					<div class="text-center">
						<button type="submit" class="btn btn-primary" style="background-color: #ff8c13; border-color: #ff8c13;">Register</button>
					</div>
					{{ form_end(registrationForm) }}
					<div class="mt-3">
						Already have an account?
						<a href="{{ path('app_login') }}">Login here</a>.
					</div>
				</div>
			</div>
		</div>
	</div>
</div></div>{% endblock %}
