{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <h1>Register</h1>
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="mb-3">
        {{ form_label(registrationForm.email) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.email) }}
    </div>
    <div class="mb-3">
        {{ form_label(registrationForm.password, 'password') }}
        {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.password) }}
    </div>
    <div class="mb-3">
        {{ form_label(registrationForm.nom) }}
        {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.nom) }}
    </div>
    <div class="mb-3">
        {{ form_label(registrationForm.prenom) }}
        {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.prenom) }}
    </div>
    <div class="mb-3">
        {{ form_label(registrationForm.numTele) }}
        {{ form_widget(registrationForm.numTele, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.numTele) }}
    </div>
    <div class="mb-3">
        {{ form_label(registrationForm.adresse) }}
        {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.adresse) }}
    </div>
   <div class="form-group">
        {{ form_label(registrationForm.roles, 'Role') }}
        {{ form_widget(registrationForm.roles, {'attr': {'class': 'form-control'}}) }}
    </div>
     <div class="form-group">
                        {{ form_row(registrationForm.agreeTerms) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
    </div>
                    {% if error %}
                    <div class="alert alert-danger">{{ error }}</div>
                    {% endif %}
    <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
     <div class="mt-3">
        Already have an account? <a href="{{ path('app_login') }}">Login here</a>.
    </div>
</div>
{% endblock %}
