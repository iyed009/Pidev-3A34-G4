<form method="post" action="{{ path('app_reponse_delete', {'id': reponse.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
    <button type="submit" class="btn btn-danger" style="border: none; background: none;">
        <i class="fas fa-trash-alt" style="transition: box-shadow 0.3s ease; color: #dc3545; font-size: 1.5rem;" onmouseover="this.style.color='#ffffff'; this.style.boxShadow='0 0 10px rgba(220, 53, 69, 0.5)'" onmouseout="this.style.color='#dc3545'; this.style.boxShadow='none'"></i>
    </button>
</form>
