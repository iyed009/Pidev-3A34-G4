                            </div>
                            <!--end::Stats-->
                            <!--begin::Indicator-->
                            <div class="d-flex align-items-center fw-bold">
                                <span class="badge bg-light text-gray-700 px-3 py-2 me-2">Date</span>
                                <span class="text-gray-400 fs-7">{{ reponse.date ? reponse.date|date('Y-m-d H:i:s') : '' }}</span>
                            </div>
                            <!--end::Indicator-->
                        </div>
                        <!--end::Card body-->
                    </div>
                    <!--end::Card-->
                </div>
                <!--end::Col-->

        {% endfor %}
