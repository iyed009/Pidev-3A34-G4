{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-fluid" style="height: 100vh; background-color: #120907; ">

        <div class="row h-100 justify-content-center align-items-center">
            <div class="card shadow-lg" style="width: 70%; min-height: 80vh; max-width: none; border:none;">
                <div class="row g-0" style="min-height: 80vh;">
                    <!-- Image Section -->
                    <div class="col-md-6 d-none d-md-flex" style="background-image: url('{{ asset('img/gym.jpg') }}'); background-size: cover; background-position: center;"></div>

                    <!-- Login Form Section -->
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="card-body w-100">
                            <h5 class="card-title text-center">Log in</h5>
                            <form method="post" class="d-flex flex-column justify-content-center align-items-center">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                
                                <div class="form-group w-75">
                                    <label for="exampleInputEmail1">Email address</label>
                                    <input type="email" class="form-control" name="email" value="{{ last_username }}" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" >
                                </div>
                                <div class="form-group w-75">
                                    <label for="exampleInputPassword1">Password</label>
                                    <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password" >
                                </div>
                                
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            
                                <div class="text-center mt-4">
                                    <button type="submit" class="btn" style="width: 150%; background-color: #ff8c13; border: none; color: white;">Login</button>
                                </div>
                                
                                <!-- Reset Password Link -->
                                <div class="mt-3 text-center w-75">
                                    <a href="{{ path('app_forgot_password_request') }}">Forgot your password?</a>
                                </div>

                            </form>
                            <div class="mt-3 text-center">
                                Don't have an account?
                                <a href="{{ path('app_register') }}">Sign up</a>.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
