{% extends 'base1.html.twig' %}

{% block title %}Edit Profile{% endblock %}
{% block customStyles %}
<style>
    .edit-profile-section {
        background-color: black;
        color: white;
    }
    /* Assurez-vous que tous les textes sont bien lisibles */
    .edit-profile-section h2,
    .edit-profile-section label,
    .edit-profile-section .form-control {
        color: white;
    }
    /* Modifier la couleur des liens si n√©cessaire */
    .edit-profile-section a {
        color: #4da6ff; /* Exemple de bleu clair pour les liens */
    }
</style>
{% endblock %}
{% block body %}
<section class="breadcrumb-section set-bg" data-setbg="{{ asset('img/breadcrumb-bg.jpg') }}">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Mon Profile</h2>
                    <div class="bt-option">
                        <a href="#">Accueil</a>
                        <span>Modifier Profile</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="edit-profile-section spad">
    <div class="container">
        <div class="edit-profile-container">
            <h2 class="text-center edit-profile-heading">Modifier le Profile</h2>
            {{ form_start(form, {'attr': {'class': 'form-horizontal profile-edit-form'}}) }}
            {% for field in form %}
                {% if field.vars.name != '_token' %}
                    <div class="form-group">
                        {{ form_label(field, null, {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                        <div class="form-error text-danger">{{ form_errors(field) }}</div>
                    </div>
                {% endif %}
            {% endfor %}
            {{ form_row(form._token) }}

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-normal appoinment-btn">Enregistrer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</section>
{% endblock %}
