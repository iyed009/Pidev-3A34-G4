{% extends 'base2.html.twig' %}

{% block title %}My Profile
{% endblock %}

{% block stylesheets %}
	<style>
		.avatar-circle {
			width: 100px;
			height: 100px;
			border-radius: 50%;
			object-fit: cover;
			margin-bottom: 20px;
			display: block; /* Center the avatar */
			margin-left: auto;
			margin-right: auto;
		}
		.profile-info {
			margin-bottom: 15px; /* Space between sections */
		}
		.profile-info h2 {
			display: inline-block; /* Keep the label on the same line */
			width: 20%; /* Adjust based on your layout */
			min-width: 150px; /* Ensure it doesn't get too small on narrow screens */
			text-align: left;
		}
		.profile-info .form-control {
			display: inline-block; /* Align with the label */
			width: 75%; /* Adjust based on your label width */
			background-color: #f8f9fa; /* Disabled background color */
			border: 1px solid #ced4da; /* Match disabled input border */
			color: #495057; /* Text color similar to normal input */
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card">
			<div class="card-header">
				<div class="profile-header">
					<img src="{{ asset('path/to/user/avatar/' ~ user.avatar) }}" class="avatar-circle" alt="Profile Avatar">
					<div>
						<h1>{{ user.nom }}
							{{ user.prenom }}</h1>
						<p class="text-muted">{{ user.email }}</p>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="profile-info">
					<h2>Email</h2>
					<input type="text" class="form-control" value="{{ user.email }}" disabled>
				</div>
				<div class="profile-info">
					<h2>Phone Number</h2>
					<input type="text" class="form-control" value="{{ user.numTele }}" disabled>
				</div>
				<div class="profile-info">
					<h2>Address</h2>
					<input type="text" class="form-control" value="{{ user.adresse }}" disabled>
				</div>
				<div class="mt-4">
					<a href="{{ path('app_edit_profile') }}" class="btn btn-primary">Edit Profile</a>
				</div>
			</div>
        </div>
		{% endblock %}
