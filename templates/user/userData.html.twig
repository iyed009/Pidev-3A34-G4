{% extends 'base1.html.twig' %}
{% block title %}
	My Profile

{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<style>
		body {
			background-color: #000; /* Ensure this matches the base1.html.twig background color */
			color: #fff; /* Adjust text color for readability */
		}

		.profile-header {
			text-align: center;
			margin: 0 auto;
			padding: 20px;
		}

		.avatar-circle {
			width: 150px;
			height: 150px;
			border-radius: 50%;
			object-fit: cover;
			margin: 20px auto;
			display: block;
		}

		.card {
			background-color: #333; /* Ensure card background matches the theme */
			color: #fff; /* Text color for content within the card */
			margin: 0 auto; /* Center the card in the middle of the page */
			max-width: 600px; /* Adjust as necessary */
		}

		.form-control {
			background-color: #555; /* For input fields */
			border: 1px solid #777;
			color: #fff;
		}

		.form-control:disabled {
			background-color: #666;
		}

		.btn-edit-profile {
			display: block;
			width: 100%;
			max-width: 200px;
			margin: 20px auto;
		}
	</style>
{% endblock %}

{% block body  %}

<section class="breadcrumb-section set-bg" data-setbg="{{ asset('img/breadcrumb-bg.jpg')}}">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>mon profile</h2>
                        <div class="bt-option">
                            <a href="#">Home</a>
                            <span>profile</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<body style="background-color:black">
	<div class="container mt-5" >
		<div class="card">
			<div class="card-header">
				<div class="profile-header text-center">
					<img src="{{ asset('uploads/images/' ~ user.avatar) }}" alt="Avatar" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
					<h3 class="mt-2">
						{{ user.nom }}
						{{ user.prenom }}
					</h3>
					<p class="text-muted">
						{{ user.email }}
					</p>

				</div>

				<div class="card-body">
					<div class="row">
						<div class="col-md-6 profile-info">
							<p class="profile-label">
								Nom
							</p>
							<input type="text" class="form-control profile-value" value="{{ user.nom }}" disabled></div>
						<div class="col-md-6 profile-info">
							<p class="profile-label">
								Prenom
							</p>
							<input type="text" class="form-control profile-value" value="{{ user.prenom }}" disabled></div>
					</div>
				</br>
				<div class="row">
					<div class="col-md-6 profile-info">
						<p class="profile-label">
							Email
						</p>
						<input type="text" class="form-control profile-value" value="{{ user.email }}" disabled></div>
					<div class="col-md-6 profile-info">
						<p class="profile-label">
							Phone Number
						</p>
						<input type="text" class="form-control profile-value" value="{{ user.numTele }}" disabled></div>
				</div>
			</br>
			<div class="row">
				<div class=" col-md-6 profile-info">
					<p class="profile-label">
						Address
					</p>
					<input type="text" class="form-control profile-value" value="{{ user.adresse }}" disabled></div>
				<div class="col-md-6 profile-info">
					<p class="profile-label">
						createdAt
					</p>
					<input type="text" class="form-control profile-value" value="{{ user.createdAt|date('Y-m-d H:i') }}" disabled></div>
			</div>
		</br>
		<div class="col-md-6 profile-info">
			<p class="profile-label">
				updatedAt
			</p>
			<input type="text" class="form-control profile-value" value="{{ user.updatedAt|date('Y-m-d H:i') }}" disabled></div>
	</br>
	<a href="{{ path('editProfileUser') }}" class="btn btn-primary btn-edit-profile">
		Edit Profile
	</a>
	{# {{ dump(user) }} #}
	{# <a href="{{ path('app_user_update_passwordProfile') }}" class="btn btn-dark btn-edit-profile">
	                                Update Password
	                            </a> #}
</div></div></div>
</body>{% endblock %}

